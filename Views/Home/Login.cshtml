    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="wrapper">
            <div class="logo">
                <img src="https://cdn0.iconfinder.com/data/icons/miscellaneous-13/512/university-512.png" alt="college logo">
            </div><br />
            <div style="font-size:15px;" , class="text-center mt-2 name">
                Login Portal
            </div><br />
            <form class="p-3 mt-3">
                <div>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
                <div class="form-field d-flex align-items-center">
                    <span class="far fa-user"></span>
                    @Html.TextBoxFor(model => model.Username, new { style = "font-size:15px;", placeholder = "Username", id = "userName", htmlAttributes = new { @class = "form-control" } })
                    @*<input type="text" name="userName" id="userName" placeholder="Username">*@
                </div> <br />
                <div class="form-field d-flex align-items-center">
                    <span class="fas fa-key"></span>
                    @Html.PasswordFor(model => model.Password, new { style = "font-size:15px;", placeholder = "Enter Password", id = "id_password", htmlAttributes = new { @class = "form-control" } })
                    <i class="far fa-eye" id="togglePassword" style="margin-left: -40px; cursor: pointer; font-size:15px;"></i>

                    <span id="togglePassword" class="eye-icon" onclick="togglePasswordVisibility()"></span>
                </div>
                <button style="font-size:15px;" , type="submit" class="btn mt-3">Login</button>
            </form>

        </div>


    }
    <script>

        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#id_password');

        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });
    </script>

